@{
    ViewBag.Title = "ladingpage";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>

    <!-- Metadatos esenciales -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Control de Actividades</title>

    <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- CDN Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- CSS Principal -->
    <link rel="stylesheet" href="~/Content/css/styles.css">

    <!-- Letra Montserratt -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&family=Montserrat:wght@300;400;600;700&family=Roboto:wght@300;400&display=swap">


</head>

<body>
    <!-- Encabezado -->
    <header class="header">
        <div class="container vh-50">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light text-dark align-items-center">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="~/Content/images/logo.svg" alt="Logo" class="img-logo" style="width: 50px;">
                </a>
                <!-- Botón de colapso -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menú -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Proyectos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Planes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Home")">
                                <i href="#" class="fas fa-user" style="color: #5e58f8;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>


            <!-- Contenido principal -->
            <div class="row align-items-center justify-content-center h-100 mt-custom">
                <div class="col-md-6">
                    <!-- Imagen -->
                    <img src="~/Content/images/img-1-sec-1.png" class="img-fluid" alt="Descripción de la imagen">
                </div>
                <div class="col-md-6 text-dark pt-5 text-center text-md-start">
                    <!-- Título -->
                    <h1 class="text-capitalize">
                        <span class="back h2">Bienvenidos <span class="text-lowercase">a</span> </span>
                        <strong class="text-bold text-custom-color">ControlSoftCR</strong>
                    </h1>
                    <!-- Descripción -->
                    <p class="h6">Gestión de tiempo eficiente, éxito constante.</p>
                    <!-- Botón -->
                    <div class="position-relative">
                        <a href="@Url.Action("Login", "Home")" class="btn btn-warning btn-custom-color">Ingresar Ahora</a>
                    </div>
                </div>
            </div>
        </div>
        <img src="~/Content/images/cut-header.svg" class="imagen">

    </header>


    <!-- Sección de Servicios -->
    <section class="containerSection">
        <div class="container">
            <div class="row">
                <!-- Textos de sección -->
                <div class="col-12 text-center">
                    <h2 class="text-custom-color text-uppercase h2">Elige tu plan</h2>
                    <h4>Rápidez, Inteligente & Grandes Soluciones</h4>
                </div>
            </div>
            <div class="row">
                <!-- Tarjetas de planes -->
                <article class="col-12 col-md-4 card-effect mb-4">
                    <div class="card text-center">
                        <img src="~/Content/images/basico.JPG" alt="basico" class="card-img card-img-filter">
                        <div class="card-img-overlay text-white d-flex flex-column justify-content-center">
                            <h4>Básico</h4>
                            <h1 class="tex-bold">$29.00</h1>
                            <p>Finance</p>
                            <p>Risk Management</p>
                            <p>Audit & Accounting Marketing</p>
                            <a href="#" class="btn btn-warning btn-custom-color btn-custom-width">Seleccionar</a>
                        </div>
                    </div>
                </article>

                <article class="col-12 col-md-4 card-effect mb-4">
                    <div class="card text-center">
                        <img src="~/Content/images/basico.JPG" alt="basico" class="card-img card-img-filter">
                        <div class="card-img-overlay text-white d-flex flex-column justify-content-center">
                            <h4>Advanced</h4>
                            <h1 class="tex-bold">$49.00</h1>

                            <p>Marketing Research</p>
                            <p>Expenses Analysis</p>
                            <p>Strategy Ideas</p>
                            <a href="#" class="btn btn-warning btn-custom-color btn-custom-width">Seleccionar</a>
                        </div>
                    </div>
                </article>

                <article class="col-12 col-md-4 card-effect mb-4">
                    <div class="card text-center">
                        <img src="~/Content/images/basico.JPG" alt="basico" class="card-img card-img-filter">
                        <div class="card-img-overlay text-white d-flex flex-column justify-content-center">
                            <h4>Deluxe</h4>
                            <h1 class="text-bold">$79.00</h1>
                            <p>Business Consulting</p>
                            <p>Audit & Accounting</p>
                            <p>Marketing Plan and Strategy</p>
                            <a href="#" class="btn btn-warning btn-custom-color btn-custom-width">Seleccionar</a>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </section>

    <!-- Sección de Comentarios de Clientes -->
    <section class="comments">
        <img src="~/Content/images/cut-header.svg" alt="" class="transform-turn">
        <div class="container">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <!-- Comentario de cliente 1 -->
                    <div class="carousel-item active">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-8">
                                <blockquote class="text-white text-center">
                                    <img src="~/Content/images/john-doe.jpeg" alt="John Doe" class="comments__img">
                                    <p>"Facilita el control de la imagen corporativa. Centraliza todos los activos de marca. Mejora la coherencia y el acceso a materiales aprobados."</p>
                                    <footer class="blockquote-footer text-white text-center"><cite>John Doe</cite></footer>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                    <!-- Comentario de cliente 2 -->
                    <div class="carousel-item">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-8">
                                <blockquote class="text-white text-center">
                                    <img src="~/Content/images/john-doe.jpeg" alt="Jane Doe" class="comments__img">
                                    <p>"Excelente para mantener la consistencia de nuestra marca. Gestión centralizada y análisis en tiempo real. Muy útil para fortalecer nuestra identidad."</p>
                                    <footer class="blockquote-footer text-white text-center"><cite>Leonel Solano</cite></footer>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                    <!-- Comentario de cliente 3 -->
                    <div class="carousel-item">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-8">
                                <blockquote class="text-white text-center">
                                    <img src="~/Content/images/john-doe.jpeg" alt="Another Person" class="comments__img">
                                    <p>"Organiza perfectamente los recursos de diseño. Ahorra tiempo y facilita la colaboración. Integración perfecta con nuestras herramientas de diseño. Muy recomendable."</p>
                                    <footer class="blockquote-footer text-white text-center"><cite>Carlos Mendez</cite></footer>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>

    <!-- Sección de Contacto -->
    <section>
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-6 text-dark pt-5">
                    <!-- Información de contacto y formulario -->
                    <h1 class="text-capitalize text-center">
                        <strong class="text-bold text-dark">Contacto</strong>
                    </h1>
                    <div class="card border-0 mb-4">
                        <div class="card-body">
                            <p class="card-text text-center">
                                <strong>Teléfono:</strong> 123-456-7890<br>
                                <strong>Email:</strong> info@controlsoftcr.com<br>
                                <strong>Dirección:</strong> Avenida del Comercio, Cartago, Costa Rica
                            </p>
                            <!-- Formulario de contacto -->
                            <form>
                                <div class="mb-3">
                                    <label for="nombre" class="form-label">Nombre</label>
                                    <input type="text" class="form-control bg-light" id="nombre" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control bg-light" id="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="mensaje" class="form-label">Mensaje</label>
                                    <textarea class="form-control bg-light" id="mensaje" rows="3" required></textarea>
                                </div>
                                <a href="#" class="btn btn-warning btn-custom-color2">Enviar Mensaje</a>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Imagen de contacto -->
                <div class="col-md-6">
                    <img src="~/Content/images/img-2-sec-2.png" class="img-fluid" alt="Descripción de la imagen">
                </div>
            </div>
        </div>
    </section>

    <!-- Pie de página -->
    <footer class="bg-dark text-white">
        <div class="container">
            <div class="row align-items-center">
                <!-- Logo -->
                <a href="#" class="col-3 text-reset text-uppercase d-flex align-items-center">
                    <img src="~/Content/images/logo.svg" alt="Logo" class="img-logo mr-2">
                </a>
                <!-- Derechos reservados y redes sociales -->
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">© 2024 ControlSoftCR. Todos los derechos reservados.</p>
                </div>
                <div class="col-md-3 text-center text-md-end">
                    <!-- Redes Sociales -->
                    <div class="social-icons">
                        <a href="#" class="text-reset pr-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-reset pr-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-reset pr-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-reset pr-3"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Content/js/scripts.js"></script>

    <!-- JavaScript Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/scripts.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

</body>

</html>

