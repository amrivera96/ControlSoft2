@model ControlSoft.Models.PuestoViewModel

@{
    ViewBag.Title = "registrarPuesto";
    Layout = null;



}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- CDN Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- CSS Main -->
    <link rel="stylesheet" href="~/Content/css/styles.css">
    <!-- Letra Montserrat -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&family=Montserrat:wght@300;400;600;700&family=Roboto:wght@300;400&display=swap">
</head>
<body>
    <header class="header">
        <div class="container vh-50">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light text-dark align-items-center">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="~/Content/images/logo.svg" alt="Logo" class="img-logo" style="width: 50px;">
                </a>
                <!-- Botón de colapso -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menú -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Proyectos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Planes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-user" style="color: #5e58f8;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Contenido principal -->
            <div class="row align-items-center justify-content-center h-100 mt-custom">
                <div class="col-md-6">
                    <!-- Imagen -->
                    <img src="~/Content/images/[removal.ai]_898d7477-a899-4639-8e9e-a35e3f9bdf15-imga.png" class="img-fluid" alt="Descripción de la imagen">
                </div>
                <div class="col-md-6 text-dark pt-5">

                    <div class="position-relative mt-5" style="top: -50px; left: -50px">
                        <!-- Título -->
                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-@ViewBag.AlertType alert-dismissible fade show" role="alert">
                                @ViewBag.Mensaje
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }




                        <form class="login-form needs-validation rounded p-4  bg-white custom-border" action="@Url.Action("registrarPuesto", "Home")" method="post" novalidate>
                            @Html.AntiForgeryToken()

                            <h1 class="text-capitalize text-center">
                                <strong class="text-bold text-dark">Registro Puestos</strong>
                            </h1>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="nombrePuesto" class="form-label">Nombre Puesto</label>
                                    <input type="text" class="form-control bg-light rounded" id="nombrePuesto" name="nombrePuesto" placeholder="Nombre Puesto" required>
                                    <div class="invalid-feedback">
                                        Por favor, ingrese el nombre Puesto.
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <label for="validationTooltip01" class="form-label">Estado Puesto</label>
                                    <select class="form-select w-100 bg-light rounded" id="validationTooltip01" name="estadoPuesto" required>
                                        <option selected disabled value="">Asignar Estado...</option>
                                        <option value="false">Inactivo</option>
                                        <option value="true">Activo</option>

                                    </select>
                                    <div class="invalid-tooltip">
                                        Seleccione un Puesto.
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <label for="salarioHora" class="form-label">Salario Por Hora</label>
                                    <input type="text" class="form-control bg-light rounded" id="salarioHora" name="salarioHora" placeholder="0.00" required>
                                    <div class="invalid-feedback">
                                        Por favor, ingrese un monto valido.
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <label for="departamentos" class="form-label">Departamentos</label>
                                    <select class="form-select w-100 bg-light rounded" id="departamentos" name="NombreDepartamento" required>
                                        <option selected disabled value="">Seleccionar departamento...</option>

                                    </select>
                                    <div class="invalid-tooltip">
                                        Seleccione un turno.
                                    </div>
                                </div>

                                <div class="col-12 text-center">
                                    <button class="btn btn-custom-color w-100" type="submit">Registrar Puesto</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <img src="~/Content/images/cut-header.svg" alt="imagen">
    </header>
    <!-- JavaScript Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Content/js/scripts.js"></script>
    <script>
        // Bootstrap validation script
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
    <script>
$(document).ready(function() {
    // Se ejecuta al cargar el documento
    $.ajax({
        url: '@Url.Action("ObtenerDepartamentos", "Home")', // Asegúrate de que la URL sea correcta
        type: 'GET',
        dataType: 'json',
        success: function(data) {
            var $dropdown = $('#departamentos'); // Usa el nuevo id aquí
            $dropdown.empty(); // Vacía el dropdown
            $dropdown.append('<option selected disabled value="">Seleccionar Departamento...</option>');

            $.each(data, function(index, departamento) {
                $dropdown.append(
                    $('<option></option>').val(departamento.nombreDep).text(departamento.nombreDep)
                );
            });
        },
        error: function(xhr, status, error) {
            console.error('Error al cargar los departamentos:', error);
            alert('Error al cargar los departamentos.');
        }
    });
});
    </script>


</body>
</html>
