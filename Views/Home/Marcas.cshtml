@model IEnumerable<ControlSoft.Models.marcas>

@{
    ViewBag.Title = "Marcas";
    Layout = null;

}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CDN Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- CSS Main -->
    <link rel="stylesheet" href="~/Content/css/styles.css" />
    <!-- CSS Marcas -->
    <link rel="stylesheet" href="~/Content/css/" />
</head>
<body>
    <header class="header">
        <div class="container-fluid vh-50">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light text-dark align-items-center">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="~/Content/images/logo.svg" alt="Logo" class="img-logo" style="width: 50px;">
                </a>
                <!-- Botón de colapso -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menú -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Proyectos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Planes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-user" style="color: #5e58f8;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Contenido principal -->
            <div class="row align-items-center justify-content-center h-100 mt-custom">

                <!-- Contenido marcas -->

                <div class="container">
                    <div class="cards">
                        <div class="card">
                            <div class="time">00:00</div>

                            <div class="date">12/02/2023</div>
                            <form method="post" asp-action="MarcarEntrada">
                                <button type="submit" class="btn">Entrada</button>
                            </form>
                        </div>
                        <div class="card">
                            <div class="time">00:00</div>
                            <div class="date">12/02/2023</div>
                            <form method="post" asp-action="MarcarSalida">
                                <button type="submit" class="btn">Salida</button>
                            </form>
                        </div>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Día</th>
                                <th>Fecha</th>
                                <th>Entrada</th>
                                <th>Salida</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var registro in Model)
                            {
                                <tr>
                                    <td>Lunes</td>
                                    <!--<td@registro.Fecha.ToString("dddd")</td>-->
                                    <td>25/07/2024</td>
                                    <!--<td@registro.Fecha.ToString("dd/MM/yyyy")</td>-->
                                    <td>8:00</td>
                                    <!--<td@registro.HoraEntrada?.ToString("hh\:mm")</td>-->
                                    <td>17:00</td>
                                    <!--<td@registro.HoraSalida?.ToString("hh\:mm")</td>-->

                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="buttons">
                        <button type="reset" class="secondary">REGRESAR</button>
                    </div>
                </div>

            </div>
        </div>
        <img src="~/Content/images/cut-header.svg" alt="">
    </header>

    <!-- JavaScript Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/scripts.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
</body>
</html>

