@model ControlSoft.Models.RegistroInconsistencia

@{
    ViewBag.Title = "JustificarInconsistenciaEmp";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CDN Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- CSS Main -->
    <link rel="stylesheet" href="~/Content/css/styles.css" />
    <!-- CSS Teresa -->
    <link rel="stylesheet" href="~/Content/css/estiloFormularios.css">
</head>
<body>
    <header class="header">
        <div class="container-fluid vh-50">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light text-dark align-items-center">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="~/Content/images/logo.svg" alt="Logo" class="img-logo" style="width: 50px;">
                </a>
                <!-- Botón de colapso -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menú -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Proyectos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Planes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-user" style="color: #5e58f8;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Contenido principal -->
            <div class="row align-items-center justify-content-center h-100 mt-custom">

                <!-- Copiar codigo -->
                <div class="container position-relative">
                    <form action="/Home/JustificarInconsistenciaEmp" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <h1>JUSTIFICACIÓN DE INCONSISTENCIA</h1>

                        <div class="form-group">
                            <label for="idInconsistencia">ID INCONSISTENCIA:</label>
                            <input type="text" class="form-control" id="idInconsistencia" name="idInconsistencia" value="@Model.idInconsistencia" readonly />
                        </div>

                        <div class="form-group">
                            <label for="fechaInconsistencia">FECHA DE LA INCONSISTENCIA:</label>
                            <input type="text" class="form-control" id="fechaInconsistencia" name="fechaInconsistencia" value="@Model.fechaInconsistencia.ToString("dd/MM/yyyy")" readonly />
                        </div>

                        <div class="form-group">
                            <label for="tipoInconsistencia">TIPO DE INCONSISTENCIA:</label>
                            <input type="text" class="form-control" id="tipoInconsistencia" name="tipoInconsistencia" value="@Model.idTipoInconsistencia" readonly />
                        </div>

                        <div class="form-group">
                            <label for="descripcionJustificacion">DESCRIPCIÓN MOTIVO DE LA INCONSISTENCIA:</label>
                            <textarea id="descripcionJustificacion" name="descripcionJustificacion" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="adjuntoJustificacion">ADJUNTAR ARCHIVO:</label>
                            <input type="file" id="adjuntoJustificacion" name="adjuntoJustificacion" class="file-input">
                            <label for="adjuntoJustificacion" class="file-label">
                                <i class="fas fa-paperclip"></i>
                                Seleccionar archivo
                            </label>
                            <span class="file-name"></span>
                        </div>

                        <div class="buttons">
                            <button type="submit" class="primary">ENVIAR JUSTIFICACIÓN</button>
                            <a href="@Url.Action("HistorialInconsistenciasEmp", "Home")" class="btn btn-secondary">ATRÁS</a>
                        </div>
                    </form>
                </div>
                <!-- Hasta aqui -->

            </div>
        </div>
        <img src="~/Content/images/cut-header.svg" alt="">
    </header>

    <!-- JavaScript Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/scripts.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
</body>
</html>
