@model ControlSoft.Models.RegistroInconsistencia

@{
    ViewBag.Title = "GestionInconsistenciasJefe";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CDN Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- CSS Main -->
    <link rel="stylesheet" href="~/Content/css/styles.css" />
    <!-- CSS Formularios -->
    <link rel="stylesheet" href="~/Content/css/estiloFormularios.css" />
    <!-- CSS Adicionales -->
    <link rel="stylesheet" href="~/Content/css/Gestion.css" />
</head>
<body>
    <header class="header">
        <div class="container-fluid vh-50">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light text-dark align-items-center">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="~/Content/images/logo.svg" alt="Logo" class="img-logo" style="width: 50px;">
                </a>
                <!-- Botón de colapso -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menú -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Proyectos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Planes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-user" style="color: #5e58f8;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Contenido principal -->
            <div class="row align-items-center justify-content-center h-100 mt-custom">
                <!-- Contenido Principal -->
                <div class="container position-relative">
                    <h1 class="header-title">GESTIÓN DE INCONSISTENCIAS</h1>
                    <form action="@Url.Action("GestionInconsistenciasJefe", "Home")" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="idInconsistencia" name="idInconsistencia" value="@Model.idInconsistencia" />
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="idInconsistencia">ID INCONSISTENCIA:</label>
                                <input type="text" class="form-control" id="idInconsistencia" name="idInconsistencia" value="@Model.idInconsistencia" readonly>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="fechaInconsistencia">FECHA DE LA INCONSISTENCIA:</label>
                                <input type="text" class="form-control" id="fechaInconsistencia" name="fechaInconsistencia" value="@Model.fechaInconsistencia.ToString("dd/MM/yyyy")" readonly>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="tipoInconsistencia">EL TIPO DE INCONSISTENCIA ES:</label>
                                <input type="text" class="form-control" id="tipoInconsistencia" name="tipoInconsistencia" value="@Model.idTipoInconsistencia" readonly>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="empleadoIncons"> EMPLEADO INCONSISTECIA:</label>
                                <input type="text" class="form-control" id="empleadoIncons" name="empleadoIncons" value="@Model.idEmpleado" readonly>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="justificacion">JUSTIFICACIÓN DE LA INCONSISTENCIA:</label>
                                <textarea class="form-control" id="justificacion" name="justificacion" rows="3" readonly>@Model.Justificacion.descripcionJustificacion</textarea>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="observacion">REALIZAR OBSERVACIÓN:</label>
                                <textarea class="form-control" id="observacion" name="observacionGestion" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-row mt-4">
                            <div class="form-group col-md-4">
                                <button type="submit" name="estadoGestion" value="true" class="btn btn-success btn-block">APROBAR</button>
                            </div>
                            <div class="form-group col-md-4">
                                <button type="submit" name="estadoGestion" value="false" class="btn btn-danger btn-block">RECHAZAR</button>
                            </div>
                            <div class="form-group col-md-4">
                                <a href="@Url.Action("BandejaInconsistenciasJefe", "Home")" class="btn btn-outline-secondary btn-block">ATRÁS</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <img src="~/Content/images/cut-header.svg" alt="">
    </header>

    <!-- JavaScript Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/scripts.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
</body>
</html>
